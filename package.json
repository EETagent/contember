{
	"watch": {
		"styles:build": {
			"patterns": [
				"packages"
			],
			"ignore": [
				"node_modules"
			],
			"extensions": "sass,scss"
		}
	},
	"scripts": {
		"dev": "concurrently \"npm run ts:watch\" \"npm run styles:watch\"  \"npm run storybook\"",
		"styles:watch": "npm-watch styles:build",
		"styles:build": "cd packages/admin && npm run styles:build",
		"storybook": "cd packages/ui && npm run storybook",
		"bootstrap": "lerna bootstrap --ci",
		"bootstrap:hoist": "lerna bootstrap --ci --hoist",
		"update": "lerna bootstrap --no-ci",
		"restart-api": "docker-compose up --force-recreate -d --no-deps api",
		"ci-clean": "rm -rf packages/*/node_modules/typescript",
		"clean:dist": "rm -rf packages/*/dist",
		"clean:node-modules": "rm -rf node_modules/ packages/*/node_modules",
		"clean": "rm -rf node_modules/ packages/*/{dist,node_modules}",
		"ts:build": "tsc --build",
		"ts:watch": "tsc --build --watch",
		"ts:clean": "tsc --build --clean",
		"prebuild": "lerna run prebuild",
		"build": "tsc --build && lerna run build",
		"test": "lerna run test",
		"eslint:lint": "eslint \"**/*.{ts,tsx}\" ",
		"eslint:fix": "eslint --fix \"**/*.{ts,tsx}\" ",
		"tag-version": "lerna version --exact --force-publish"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "15.0.0",
		"@rollup/plugin-node-resolve": "9.0.0",
		"@rollup/plugin-replace": "2.3.3",
		"@types/classnames": "2.2.10",
		"@types/jest": "26.0.20",
		"@types/react": "17.0.2",
		"@types/react-dom": "17.0.1",
		"@types/sass": "1.16.0",
		"@typescript-eslint/eslint-plugin": "4.1.0",
		"@typescript-eslint/parser": "4.1.0",
		"concurrently": "5.3.0",
		"eslint": "7.9.0",
		"eslint-config-prettier": "6.11.0",
		"eslint-plugin-prettier": "3.1.4",
		"eslint-plugin-react": "7.20.6",
		"eslint-plugin-react-hooks": "4.1.2",
		"jest": "26.4.2",
		"lerna": "3.22.1",
		"lerna-update-wizard": "0.17.8",
		"nodemon": "2.0.4",
		"npm-watch": "0.7.0",
		"prettier": "2.1.1",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"rollup": "2.26.11",
		"rollup-plugin-terser": "7.0.2",
		"rollup-plugin-visualizer": "4.1.1",
		"sass": "1.26.10",
		"ts-node": "9.0.0",
		"typescript": "4.2.2"
	}
}
