{
	"watch": {
		"styles:build": {
			"patterns": [
				"packages"
			],
			"ignore": [
				"node_modules"
			],
			"extensions": "sass,scss"
		}
	},
	"scripts": {
		"dev": "concurrently \"npm run ts:watch\" \"npm run styles:watch\"  \"npm run storybook\"",
		"styles:watch": "npm-watch styles:build",
		"styles:build": "cd packages/admin && npm run styles:build",
		"storybook": "cd packages/ui && npm run storybook",
		"bootstrap": "lerna bootstrap --ci",
		"bootstrap:hoist": "lerna bootstrap --ci --hoist",
		"update": "lerna bootstrap --no-ci",
		"cli": "node ./packages/cli/dist/src/cli.js",
		"restart-api": "docker-compose up --force-recreate -d --no-deps api",
		"ci-clean": "rm -rf packages/*/node_modules/typescript",
		"clean:dist": "rm -rf packages/*/dist",
		"clean:node-modules": "rm -rf node_modules/ packages/*/node_modules",
		"clean": "rm -rf node_modules/ packages/*/{dist,node_modules}",
		"ts:build": "tsc --build",
		"ts:watch": "tsc --build --watch",
		"ts:clean": "tsc --build --clean",
		"prebuild": "lerna run prebuild",
		"build": "tsc --build && lerna run build",
		"test": "lerna run --concurrency 1 test",
		"eslint:lint": "eslint \"**/*.{ts,tsx}\" ",
		"eslint:fix": "eslint --fix \"**/*.{ts,tsx}\" ",
		"tag-version": "lerna version --force-publish"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "2.23.0",
		"@typescript-eslint/parser": "2.23.0",
		"concurrently": "5.1.0",
		"eslint": "6.8.0",
		"eslint-config-prettier": "6.10.0",
		"eslint-plugin-prettier": "3.1.2",
		"eslint-plugin-react": "7.19.0",
		"eslint-plugin-react-hooks": "4.0.4",
		"jasmine": "3.5.0",
		"jasmine-ts": "0.3.0",
		"lerna": "3.18.3",
		"lerna-update-wizard": "0.16.0",
		"nodemon": "2.0.2",
		"npm-watch": "0.6.0",
		"prettier": "1.19.1",
		"ts-node": "8.4.1",
		"typescript": "3.8.3"
	}
}
