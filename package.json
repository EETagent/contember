{
	"watch": {
		"styles:build": {
			"patterns": [
				"packages"
			],
			"ignore": [
				"node_modules"
			],
			"extensions": "sass,scss"
		}
	},
	"type": "module",
	"scripts": {
		"build": "pnpm run ts:build && pnpm run -r --parallel build && pnpm run -r --parallel styles:build",
		"build:api:dev": "pnpm run -r build:api:dev # && pnpm run build:docs",
		"build:ap:prod": "pnpm run -r build:api:prod # && pnpm run build:docs",
		"build:docs": "echo \"Generated API docs are currently broken and disabled.\" # api-documenter markdown --input-folder ./temp --output-folder ./docs",
		"check": "./scripts/runChecks.sh",
		"clean": "pnpm run clean:dependencies && pnpm run clean:generated",
		"clean:dependencies": "rm -rf node_modules/ packages/*/node_modules",
		"clean:generated": "rm -rf temp/ packages/*/{dist,temp}",
		"eslint:fix": "eslint --fix \"**/*.{ts,tsx}\" ",
		"eslint:lint": "eslint \"**/*.{ts,tsx}\" ",
		"storybook": "cd packages/ui && pnpm run storybook",
		"tag-version": "lerna version --exact --force-publish",
		"test": "pnpm run -r --parallel test",
		"ts:build": "tsc --build",
		"ts:watch": "tsc --build --watch",
		"vite": "cd packages/admin-sandbox && pnpm run vite"
	},
	"devDependencies": {
		"@babel/core": "7.14.8",
		"@babel/preset-env": "7.14.8",
		"@babel/preset-react": "7.14.5",
		"@babel/preset-typescript": "7.14.5",
		"@microsoft/api-documenter": "7.13.33",
		"@microsoft/api-extractor": "7.18.4",
		"@types/classnames": "2.2.10",
		"@types/jest": "26.0.20",
		"@types/react": "17.0.5",
		"@types/react-dom": "17.0.1",
		"@typescript-eslint/eslint-plugin": "4.16.1",
		"@typescript-eslint/parser": "4.16.1",
		"@vitejs/plugin-react-refresh": "1.3.5",
		"babel-jest": "27.0.6",
		"concurrently": "5.3.0",
		"eslint": "7.21.0",
		"eslint-config-prettier": "8.1.0",
		"eslint-plugin-prettier": "3.3.1",
		"eslint-plugin-react": "7.22.0",
		"eslint-plugin-react-hooks": "4.2.0",
		"jest": "26.4.2",
		"lerna": "3.22.1",
		"lerna-update-wizard": "0.17.8",
		"nodemon": "2.0.4",
		"npm-watch": "0.7.0",
		"prettier": "2.2.1",
		"react": "17.0.1",
		"react-dom": "17.0.1",
		"sass": "1.35.2",
		"ts-node": "9.0.0",
		"typescript": "4.2.2",
		"vite": "2.4.2"
	}
}
