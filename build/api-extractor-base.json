{
	"$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",

	"mainEntryPointFilePath": "<projectFolder>/temp/index.d.ts",
	"bundledPackages": [
		"@contember/admin",
		"@contember/admin-i18n",
		"@contember/admin-server",
		"@contember/binding",
		"@contember/client",
		"@contember/react-client",
		"@contember/react-multipass-rendering",
		"@contember/react-utils",
		"@contember/ui",
		"@contember/utils",
		"@contember/vimeo-file-uploader"
	],
	"apiReport": {
		"enabled": true,
		"reportFileName": "<unscopedPackageName>.api.md",
		"reportFolder": "<projectFolder>/doc-report/",
		"reportTempFolder": "<projectFolder>/temp/api-extractor/"
	},
	"compiler": {
		"overrideTsconfig": {
			"extends": "../../tsconfig.settings.json",
			"compilerOptions": {
				"baseUrl": ".",
				"paths": {
					"@contember/admin":  ["../admin/temp"],
					"@contember/admin-i18n":  ["../admin-i18n/temp"],
					"@contember/admin-server":  ["../admin-server/temp"],
					"@contember/binding":  ["../binding/temp"],
					"@contember/client":  ["../client/temp"],
					"@contember/react-client":  ["../react-client/temp"],
					"@contember/react-multipass-rendering":  ["../react-multipass-rendering/temp"],
					"@contember/react-utils":  ["../react-utils/temp"],
					"@contember/ui":  ["../ui/temp"],
					"@contember/utils":  ["../utils/temp"],
					"@contember/vimeo-file-uploader":  ["../vimeo-file-uploader/temp"]
				}
			}
		}
	},
	"docModel": {
		"enabled": true,
		"apiJsonFilePath": "<projectFolder>/temp/api-extractor/<unscopedPackageName>.api.json"
	},
	"dtsRollup": {
		"enabled": true,
		"untrimmedFilePath": "<projectFolder>/dist/<unscopedPackageName>.d.ts"
	},
	"tsdocMetadata": {
		"enabled": true,
		"tsdocMetadataFilePath": "<projectFolder>/dist/tsdoc-metadata.json"
	},
	"newlineKind": "lf",
	"messages": {
		"compilerMessageReporting": {
			"default": {
				"logLevel": "warning"
			}
		},
		"extractorMessageReporting": {
			"default": {
				"logLevel": "warning"
			},
			"ae-missing-release-tag": {
				"logLevel": "none"
			}
		},
		"tsdocMessageReporting": {
			"default": {
				"logLevel": "warning"
			}
		}
	}
}
