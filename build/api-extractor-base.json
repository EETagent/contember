{
	"$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",

	"mainEntryPointFilePath": "<projectFolder>/temp/index.d.ts",
	"bundledPackages": ["@contember/schema"],
	"apiReport": {
		"enabled": false,
		"reportFileName": "<unscopedPackageName>.api.md",
		"reportFolder": "<projectFolder>/doc-report/",
		"reportTempFolder": "<projectFolder>/temp/api-extractor/"
	},
	"compiler": {
		"overrideTsconfig": {
			"extends": "../../tsconfig.settings.json",
			"compilerOptions": {
				"baseUrl": ".",
				"paths": {
					"@contember/admin": ["../admin/dist/admin.d.ts"],
					"@contember/admin-i18n": ["../admin-i18n/dist/admin-i18n.d.ts"],
					"@contember/admin-server": ["../admin-server/dist/admin-server.d.ts"],
					"@contember/binding": ["../binding/dist/binding.d.ts"],
					"@contember/client": ["../client/dist/client.d.ts"],
					"@contember/react-client": ["../react-client/dist/react-client.d.ts"],
					"@contember/react-multipass-rendering": ["../react-multipass-rendering/dist/react-multipass-rendering.d.ts"],
					"@contember/react-utils": ["../react-utils/dist/react-utils.d.ts"],
					"@contember/ui": ["../ui/dist/ui.d.ts"],
					"@contember/utils": ["../utils/dist/utils.d.ts"],
					"@contember/vimeo-file-uploader": ["../vimeo-file-uploader/dist/vimeo-file-uploader.d.ts"]
				}
			}
		}
	},
	"docModel": {
		"enabled": true,
		"apiJsonFilePath": "<projectFolder>/../../temp/<unscopedPackageName>.api.json"
	},
	"dtsRollup": {
		"enabled": true,
		"untrimmedFilePath": "<projectFolder>/dist/<unscopedPackageName>.d.ts"
	},
	"tsdocMetadata": {
		"enabled": false,
		"tsdocMetadataFilePath": "<projectFolder>/dist/tsdoc-metadata.json"
	},
	"newlineKind": "lf",
	"messages": {
		"compilerMessageReporting": {
			"default": {
				"logLevel": "warning"
			}
		},
		"extractorMessageReporting": {
			"default": {
				"logLevel": "warning"
			},
			"ae-missing-release-tag": {
				"logLevel": "none"
			}
		},
		"tsdocMessageReporting": {
			"default": {
				"logLevel": "warning"
			}
		}
	}
}
