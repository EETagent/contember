{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",

		"target": "es2019",
		"moduleResolution": "node",
		"module": "esnext",
		"outDir": "dist",

		"strict": true,
		"incremental": true,

		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"useDefineForClassFields": true,

		"lib": ["esnext", "dom"]
	}
}
