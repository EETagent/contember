{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"composite": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",

		"target": "es2019",
		"moduleResolution": "node",
		"module": "esnext",
		"outDir": "dist",

		"strict": true,
		"incremental": true,

		"lib": ["esnext", "dom"]
	}
}
